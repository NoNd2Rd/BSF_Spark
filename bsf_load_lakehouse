#!/bin/bash

# 🚀 Lakehouse Loader Script
# Usage:
#   ./bsf-load-lakehouse.sh --mode <mode> [--option <option>]

# ────────────── Initialize variables ──────────────
MODE=""
OPTION=""

# ────────────── Help function ──────────────
usage() {
    echo "Usage: $0 --mode <mode> [--option <option>]"
    echo
    echo "Required arguments:"
    echo "  --mode       Mode of operation: history, signals, candidates"
    echo
    echo "Optional arguments (only for history mode):"
    echo "  --option     Option to use: full or incremental"
    echo
    echo "Other:"
    echo "  -h, --help   Show this help message"
    exit 1
}

# ────────────── Parse arguments ──────────────
while [[ "$#" -gt 0 ]]; do
    case $1 in
        -h|--help)
            usage
            ;;
        --mode)
            MODE="$2"
            shift
            ;;
        --option)
            OPTION="$2"
            shift
            ;;
        *)
            echo "❌ Unknown parameter: $1"
            usage
            ;;
    esac
    shift
done

# ────────────── Validate required arguments ──────────────
if [[ -z "$MODE" ]]; then
    echo "❌ --mode is required"
    usage
fi

# ────────────── Validate allowed values ──────────────
if [[ "$MODE" != "history" && "$MODE" != "signals" && "$MODE" != "candidates" ]]; then
    echo "❌ Invalid --mode: $MODE. Allowed values: history, signals, candidates"
    usage
fi

if [[ "$MODE" == "history" ]]; then
    if [[ -z "$OPTION" ]]; then
        echo "❌ --option is required when --mode=history"
        usage
    fi
    if [[ "$OPTION" != "full" && "$OPTION" != "incremental" ]]; then
        echo "❌ Invalid --option: $OPTION. Allowed values: full, incremental"
        usage
    fi
else
    if [[ -n "$OPTION" ]]; then
        echo "⚠️  Ignoring --option since --mode=$MODE"
        OPTION=""
    fi
fi

# ────────────── Log setup ──────────────
LOG_DIR=/var/log/bsf
mkdir -p "$LOG_DIR"

TS=$(date +"%Y%m%d_%H%M%S")

PARAMS="mode_${MODE}"
if [[ -n "$OPTION" ]]; then
    PARAMS="${PARAMS}_option_${OPTION}"
fi
LOG_FILE="$LOG_DIR/bsf_load_${PARAMS}_${TS}.log"

# Redirect stdout/stderr
exec >> "$LOG_FILE" 2>&1
#set -x

# Keep last 10 logs per mode/option
ls -1t "$LOG_DIR"/bsf_load_mode_"${MODE}"* 2>/dev/null | tail -n +11 | xargs -r rm -f

echo "🚀 Starting lakehouse load at $(date)"
echo "📦 Mode: $MODE"
if [[ -n "$OPTION" ]]; then
    echo "⚡️ Option: $OPTION"
fi

# ────────────── Activate Python virtualenv ──────────────
source $HOME/.venv/python3.9_bsf/bin/activate

# ────────────── Run Python loader ──────────────
PY_ARGS="--mode $MODE"
if [[ -n "$OPTION" ]]; then
    PY_ARGS="$PY_ARGS --option $OPTION"
fi

python3 /srv/jupyter/bsf_analysis/bsf_load_lakehouse.py $PY_ARGS

echo "✅ Lakehouse load finished at $(date)"
